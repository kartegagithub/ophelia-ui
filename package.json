{
  "name": "ophelia-next",
  "version": "1.2.4",
  "description": "Ophelia UI NextJS Development Library",
  "author": "kartegagithub",
  "license": "MIT",
  "repository": "https://github.com/kartegagithub/ophelia-ui",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "engines": {
    "node": ">=18.17.1"
  },
  "scripts": {
    "build": "rimraf dist && npm run build:esm && npm run build:cjs && npm run copyCss && tsc --build --clean",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "clean": "tsc --build --clean",
    "copyCss": "copyfiles -u 1 src/**/*.scss dist/cjs && copyfiles -u 1 src/**/*.scss dist/esm",
    "prepare": "run-s build"
  },
  "peerDependencies": {
    "next": "*",
    "react": "*"
  },
  "devDependencies": {
    "@babel/plugin-proposal-unicode-property-regex": "^7.18.6",
    "@babel/plugin-transform-unicode-property-regex": "^7.24.7",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.11.30",
    "@types/pluralize": "^0.0.33",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "gh-pages": "^6.1.1",
    "microbundle-crl": "^0.13.11",
    "next": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "rollup": "^4.17.2",
    "sanitize-html": "^2.13.0",
    "typescript": "^4.9.5"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@babel/eslint-parser": "^7.24.1",
    "@heroicons/react": "^2.1.3",
    "@tinymce/tinymce-react": "^5.1.1",
    "@types/estree": "^1.0.5",
    "@zxing/library": "^0.20.0",
    "highlight.js": "^11.9.0",
    "mime-types": "^2.1.35",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.46",
    "next": "*",
    "nvm": "^0.0.4",
    "pluralize": "^8.0.0",
    "react-select": "^5.8.0",
    "swr": "^2.2.5"
  }
}
